<% title "Games" %>

<table>
  <tr>
    <th>Date</th>
    <th>Home</th>
    <th>Away</th>
    <th>Home Score</th>
    <th>Away Score</th>
    <th>Week</th>
  </tr>
  <% for game in @games %>
    <tr>
      <td><%= game.date %></td>
      <td><%= game.home.nickname %></td>
      <td><%= game.away.nickname %></td>
      <td><%= game.home_score %></td>
      <td><%= game.away_score %></td>
      <td><%= game.week_id %></td>
      <td><%= link_to "Show", game %></td>
      <td><%= link_to "Edit", edit_game_path(game) %></td>
      <td><%= link_to "Destroy", game, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Game", new_game_path %></p>
