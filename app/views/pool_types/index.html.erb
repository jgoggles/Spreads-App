<% @pool_types.each do |pool_type| %>
  <tr>
    <td><%= pool_type.name %></td>
    <td><%= pool_type.max_picks %></td>
    <td><%= pool_type.min_picks %></td>
    <td><%= pool_type.spreads %></td>
    <td><%= pool_type.over_under %></td>
    <td><%= pool_type.is_tiebreaker %></td>
    <td><%= link_to 'Show', pool_type %></td>
    <td><%= link_to 'Edit', edit_pool_type_path(pool_type) %></td>
    <td><%= link_to 'Destroy', pool_type, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

