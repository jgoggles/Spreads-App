<% if game.spread != :picked %>
  <div class="teamLine">
    <%= check_box_tag("pick_#{game.id}_0", '1', false, :class => 'pick', 'data-behaviors' => 'pick-values') %>
    <span id="<%= game.away.team.id %>" class="team away"><%= game.away.team.nickname %></span>
    <span class="spread">
      <% if game.spread != "0" %>
        <%= game.spread.to_f * -1 > 0 ? '+' : '' %><%= game.spread.to_f * -1 %>
      <% else %>
        <%= game.spread.to_f %>
      <% end %>
    </span>
  </div>
  <div class="teamLine">
    <%= check_box_tag("pick_#{game.id}_1", '1', false, :class => 'pick', 'data-behaviors' => 'pick-values') %>
    <span id="<%= game.home.team.id %>" class="team home"><%= game.home.team.nickname %></span>
    <span class="spread"><%= game.spread.to_f > 0 ? '+' : '' %><%= game.spread.to_f %></span>
  </div>
<% else %>
  <div>
    You've already picked this game.
  </div>
  <div class="teamLine">
    <%= game.away.team.nickname %>
  </div>
  <div class="teamLine">
    <%= game.home.team.nickname %>
  </div>
<% end %>
