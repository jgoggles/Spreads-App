<p>
  <b>Pool:</b>
  <%= @pick_set.pool.name %>
</p>

<p>
  <b>Week:</b>
  <%= @pick_set.week.name %>
</p>
<table>
  <thead>
    <th>Record</th>
    <th>Team</th>
    <th>Spread</th>
    <th>Result</th>
  </thead>
  <tbody>
    <tr>
    <tr>
      <td><%= @pick_set.record %></td>
      <% @pick_set.picks.each do |pick| %>
        <tr>
          <td></td>
          <% if pick.team.nil? %>
            <td>No pick</td>
            <td>n/a</td>
          <% else %>
            <td><%= pick.team.nickname %></td>
            <td><%= pick.spread %></td>
          <% end %>
          <td class="<%= pick.result_in_words.downcase %>"><%= pick.result_in_words %></td>
        </tr>
      <% end %>
    </tr>
  </tbody>
</table>


<% if can? :update, @pick_set %>
  <% unless @pick_set.has_max_picks %>
    <%= link_to 'Add picks for this week', edit_pool_pick_set_path(@pool, @pick_set) %>
  <% end %>
<% end %>
